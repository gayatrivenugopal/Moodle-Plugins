<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/attendance/db" VERSION="20131015" COMMENT="XMLDB file for Moodle local/attendance"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="deleted_blank_sessions_log" COMMENT="Contains a log of all the blank sessions that have been deleted using the plugin">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" NEXT="courseid"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" PREVIOUS="id" NEXT="sessdate"/>
        <FIELD NAME="sessdate" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" PREVIOUS="courseid" NEXT="deletedon"/>
        <FIELD NAME="deletedon" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" PREVIOUS="sessdate" NEXT="deletedby"/>
        <FIELD NAME="deletedby" TYPE="text" NOTNULL="true" SEQUENCE="false" PREVIOUS="deletedon" NEXT="reason"/>
        <FIELD NAME="reason" TYPE="text" NOTNULL="false" SEQUENCE="false" PREVIOUS="deletedby"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>